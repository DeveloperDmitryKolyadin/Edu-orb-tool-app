<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Текстовый блок -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="222dp"
        app:srcCompat="@drawable/photo_2023_03_24_20_09_59" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:gravity="center"
        android:text="Вам будет предложено войти в электронный дневник через госуслуги. Данные не будут переданы без вашего разрешения."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <!-- Кнопка -->
    <Button
        android:id="@+id/button_login_gov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти через госуслуги"
        android:textSize="18sp" />

</LinearLayout>